# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/localitybay

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS) - comma-separated for multiple domains
FRONTEND_URL=http://localhost:3000,http://localhost:5173

# Admin Panel
ADMIN_COOKIE_SECRET=admin-secret-key

# Production Settings
# Set to 'false' if running production on HTTP (not HTTPS)
# FORCE_HTTPS=false

# For production, use your actual MongoDB Atlas URI:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/localitybay?retryWrites=true&w=majority 